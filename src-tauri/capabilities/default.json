{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:allow-appdata-write",
    "fs:allow-appdata-write-recursive",
    {
      "identifier": "fs:default",
      "allow": [
        {
          "path": "$APPDATA/*",
          "read": true,
          "write": true
        }
      ]
    }
  ]
}
